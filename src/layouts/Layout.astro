---
interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
}

import '../styles/global.css';

import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { ClientRouter } from 'astro:transitions';

const {
  title = 'Sistema de Gestión de Laboratorio',
  description = 'LIMS-QC - Sistema de Gestión de Información de Laboratorio y Control de Calidad certificado bajo ISO 15189:2022. Control documental, trazabilidad de muestras y auditoría.',
  canonical = 'https://www.lims-qc.com',
  ogImage = '/lims-qc-og.webp',
} = Astro.props;

const pageTitle = `${title} | LIMS-QC`;
---
<!doctype html>
<html lang="es" class="scroll-smooth" itemscope itemtype="https://schema.org/WebApplication">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="revisit-after" content="7 days" />
    <meta name="language" content="Spanish" />
    <meta name="author" content="LIMS-QC Development Team" />
    <meta name="keywords" content="LIMS, laboratorio, ISO 15189, control de calidad, trazabilidad, muestras, gestión documental" />

    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <link rel="icon" type="image/svg+xml" href="/logo.webp" sizes="any" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonical} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="LIMS-QC" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebApplication",
        "name": "LIMS-QC",
        "applicationCategory": "Laboratory Information Management System",
        "url": "{canonical}",
        "description": "{description}",
        "operatingSystem": "Web",
        "offers": {
          "@type": "Offer",
          "category": "Laboratory Management Software"
        },
        "featureList": [
          "Control Documental",
          "Trazabilidad de Muestras",
          "Cumplimiento ISO 15189:2022",
          "Auditoría y Reportes",
          "Gestión de Calidad"
        ]
      }
    </script>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <ClientRouter />
  </head>

  <body class="min-h-screen bg-gray-50">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed top-4 left-4 z-50 bg-blue-600 text-white px-4 py-2 rounded-lg shadow-lg">
      Saltar al contenido principal
    </a>

    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer/>
  </body>
</html>